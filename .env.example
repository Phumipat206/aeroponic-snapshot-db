# =============================================================================
# Aeroponic Snapshot Database — Environment Configuration
# =============================================================================
# วิธีใช้: คัดลอกไฟล์นี้เป็น .env แล้วแก้ไขค่า
#   cp .env.example .env
# start.sh จะสร้าง .env ให้อัตโนมัติถ้ายังไม่มี
# ⚠️  อย่า commit ไฟล์ .env ลง Git (มี secrets)
# =============================================================================

# ---------- Server ----------
HOST=0.0.0.0
PORT=8443
FLASK_DEBUG=False

# ---------- Security ----------
# สร้างด้วย: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-random-hex-string
ADMIN_TOKEN=change-me-to-random-token

# ---------- SSL/TLS ----------
USE_SSL=true

# ---------- API Keys สำหรับ Raspberry Pi cameras ----------
API_KEYS=rpi-cam1-secret-key,rpi-cam2-secret-key,rpi-cam3-secret-key

# ---------- Session & Auth ----------
SESSION_TIMEOUT=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15

# ---------- Upload ----------
MAX_CONTENT_LENGTH=52428800
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,bmp

# ---------- Video ----------
VIDEO_FPS=10
VIDEO_QUALITY=95

# ---------- Logging ----------
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
